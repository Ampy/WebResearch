@section styles{
        <style type="text/css">
            .widget-box .widget-toolbar a
	        {
		        color: white;
	        }

            .tablewrap
            {
                overflow:scroll;
            }

            .table-nonfluid {
                table-layout: auto;
                width: 98%;
            }

            .table td.last
            {
                width:1px;
                white-space: nowrap;
            }

            .table .table-cell{
                font-family: Tahoma,Verdana,宋体;
                font-size: 9pt;
                line-height: 18px;
                overflow: hidden;
                padding: 2px 0;
                position: relative;
                white-space: normal;
                width: 100%;
                word-break: break-all;
            }

            .table .table-cell-nowrap{
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                word-break: keep-all;
            }
        </style>
}

@RenderSection("pagestyles", required: false)

